
@{
    ViewBag.Title = "CreateMember";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




@model prjAdmin.Models.tMember

@{
    ViewBag.Title = "新增用戶";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="container my-5">
    <h2 class="mb-4">新增管理員</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="card p-4">
            <div class="row mb-3">
                <div class="col-md-1">
                    @Html.LabelFor(model => model.tUserId, htmlAttributes: new { @class = "form-label" })
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.tUserId, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.tUserId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-1">
                    @Html.LabelFor(model => model.tPwd, htmlAttributes: new { @class = "form-label" })
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.tPwd, new { htmlAttributes = new { @class = "form-control", type = "text" } })
                    @Html.ValidationMessageFor(model => model.tPwd, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-1">
                    @Html.LabelFor(model => model.tName, htmlAttributes: new { @class = "form-label" })
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.tName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.tName, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="row mb-3">
                <div class="col-md-1">
                    @Html.LabelFor(model => model.tEmail, htmlAttributes: new { @class = "form-label" })
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.tEmail, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.tEmail, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input Type="submit" value="儲存" class="btn btn-warning" id="save_data" />
                    <a href="@Url.Action("ShowMember")" class="btn btn-secondary mx-2">
                        <i class="fas fa-arrow-left"></i> 返回
                    </a>
                </div>
            </div>
        </div>
    }
    @if (ViewBag.Error == true)
    {
        <div class="alert alert-danger">
            <strong>帳號名重複請換一個!</strong>
        </div>
    }
</div>




