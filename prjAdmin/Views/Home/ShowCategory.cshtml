@model IEnumerable<prjAdmin.Models.Category>

@{
    ViewBag.Title = "分類列表";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.css" />

<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.js"></script>

@*Begin Page Content*@
<div class="container-fluid">

    <h1 class="h3 mb-2 text-gray-800">分類管理</h1>


    @*DataTales Example*@
    <div class="card shadow mb-4">
        <div class="card-header py-3" style="display: flex; align-items: center;">
            <h6 class="m-0 font-weight-bold text-primary" style="flex: 1;">分類列表</h6>
            <a href=@Url.Action("CreateCategory") class="btn btn-success btn-icon-split">
                <span class="icon text-white-50">
                    <i class="fas fa-plus"></i>
                </span>
                <span class="text">新增分類</span>
            </a>
        </div>


        <div class="card-body">
            <div class="table-responsive">

                <table class="table table-bordered" id="dataTable1" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Name)</th>
                            <th>@Html.DisplayNameFor(model => model.Type)</th>
                            <th>@Html.DisplayNameFor(model => model.Sort)</th>
                            <th>@Html.DisplayNameFor(model => model.UpdateTime)</th>
                            <th>    操作   </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="bUserId">@item.Name</td>
                                <td>@item.Type</td>
                                <td>@item.Sort</td>
                                <td>@item.UpdateTime</td>
                                <td>
                                    <a href="@Url.Action("EditCategory")?Id=@item.Id" class="btn btn-info btn-icon-split">
                                        <span class="icon text-white-50">
                                            <i class="fas fa-info-circle"></i>
                                        </span>
                                        <span class="text">編輯</span>
                                    </a>

                                    <a href="@Url.Action("DeleteCategory")?Id=@item.Id" class="btn btn-danger btn-icon-split" name="bDelete" onclick="return confirm('確定要刪除 @item.Name 嗎?');">
                                        <span class="icon text-white-50">
                                            <i class="fas fa-trash"></i>
                                        </span>
                                        <span class="text">刪除</span>
                                    </a>


                                </td>
                            </tr>
                        }
                    </tbody>
                </table>


                <script>
                    $(document).ready(function () {
                        var apiurl = location.href.substring(0, 23) + "Home/";

                        $('#dataTable1').DataTable({
                            deferRender: true,
                            language: {
                                url: '//cdn.datatables.net/plug-ins/1.13.4/i18n/zh-HANT.json',
                            },
                        });

                    });
                </script>
            </div>
        </div>
    </div>

</div>


